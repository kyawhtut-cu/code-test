<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CodeTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->

        <item name="textColor">@color/black</item>
        <item name="iconColor">@color/white</item>
    </style>

    <style name="Theme.CodeTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CodeTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CodeTest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ItemRating" parent="Theme.CodeTest">
        <item name="colorAccent">@color/colorDiscountRate</item>
    </style>
</resources>